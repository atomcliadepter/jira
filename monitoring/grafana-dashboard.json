{
  "dashboard": {
    "id": null,
    "title": "Enhanced MCP Jira REST Server",
    "tags": ["mcp", "jira", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Server Health",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"mcp-jira-server\"}",
            "legendFormat": "Server Status"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "green", "value": 1}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_tool_executions_total[5m])",
            "legendFormat": "Requests/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 0}
      },
      {
        "id": 3,
        "title": "Tool Execution Success Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(mcp_tool_executions_total{success=\"true\"}[5m]) / rate(mcp_tool_executions_total[5m]) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 90},
                {"color": "green", "value": 95}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 8}
      },
      {
        "id": 4,
        "title": "Response Time",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(mcp_tool_execution_duration_ms_bucket[5m]))",
            "legendFormat": "95th percentile"
          },
          {
            "expr": "histogram_quantile(0.50, rate(mcp_tool_execution_duration_ms_bucket[5m]))",
            "legendFormat": "50th percentile"
          }
        ],
        "yAxes": [
          {
            "unit": "ms"
          }
        ],
        "gridPos": {"h": 8, "w": 18, "x": 6, "y": 8}
      },
      {
        "id": 5,
        "title": "Authentication Events",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_audit_events_total{event_type=\"authentication\"}[5m])",
            "legendFormat": "Auth Events/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16}
      },
      {
        "id": 6,
        "title": "Security Violations",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(mcp_audit_events_total{event_type=\"security_violation\"}[5m])",
            "legendFormat": "Security Violations/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16}
      },
      {
        "id": 7,
        "title": "Rate Limit Events",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(mcp_rate_limit_exceeded_total[5m]))",
            "legendFormat": "Rate Limits/sec"
          }
        ],
        "gridPos": {"h": 8, "w": 6, "x": 0, "y": 24}
      },
      {
        "id": 8,
        "title": "Cache Hit Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(mcp_cache_hits_total[5m]) / (rate(mcp_cache_hits_total[5m]) + rate(mcp_cache_misses_total[5m])) * 100",
            "legendFormat": "Cache Hit Rate %"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "thresholds": {
              "steps": [
                {"color": "red", "value": 0},
                {"color": "yellow", "value": 70},
                {"color": "green", "value": 90}
              ]
            }
          }
        },
        "gridPos": {"h": 8, "w": 6, "x": 6, "y": 24}
      },
      {
        "id": 9,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"mcp-jira-server\"}",
            "legendFormat": "Memory Usage"
          }
        ],
        "yAxes": [
          {
            "unit": "bytes"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 24}
      },
      {
        "id": 10,
        "title": "Top Tools by Usage",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (tool) (rate(mcp_tool_executions_total[1h])))",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 32}
      },
      {
        "id": 11,
        "title": "Error Rate by Tool",
        "type": "table",
        "targets": [
          {
            "expr": "topk(10, sum by (tool) (rate(mcp_tool_executions_total{success=\"false\"}[1h])))",
            "format": "table"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 32}
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "30s"
  }
}
