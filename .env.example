
# Jira Configuration
JIRA_BASE_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your-email@example.com
JIRA_API_TOKEN=your-api-token

# Optional: OAuth Configuration (alternative to API token)
# JIRA_OAUTH_CLIENT_ID=your-oauth-client-id
# JIRA_OAUTH_CLIENT_SECRET=your-oauth-client-secret
# JIRA_OAUTH_ACCESS_TOKEN=your-oauth-access-token

# MCP Server Configuration
MCP_SERVER_NAME=jira-rest
MCP_SERVER_VERSION=1.0.0

# Logging
LOG_LEVEL=info

# Performance
REQUEST_TIMEOUT=30000
MAX_RETRIES=3
RETRY_DELAY=1000
