{
  "name": "mcp-jira-rest",
  "version": "1.0.1",
  "description": "Enhanced MCP Jira server using official REST API endpoints",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "postbuild": "node -e \"const fs = require('fs'); const path = require('path'); const cliDir = path.join(__dirname, 'dist', 'cli'); if (fs.existsSync(cliDir)) { fs.readdirSync(cliDir).filter(f => f.endsWith('.js')).forEach(file => { const filePath = path.join(cliDir, file); const content = fs.readFileSync(filePath, 'utf8'); if (!content.startsWith('#!/usr/bin/env node')) { fs.writeFileSync(filePath, '#!/usr/bin/env node\\n' + content); } try { fs.chmodSync(filePath, '755'); } catch(e) { console.log('Could not set executable permissions on', file); } }); }\"",
    "dev": "ts-node --esm src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --selectProjects unit",
    "test:integration": "jest --selectProjects integration",
    "test:existing": "jest --selectProjects existing",
    "test:analytics": "jest tests/analytics",
    "test:reporting": "jest tests/reporting",
    "test:cli": "jest tests/cli.test.ts",
    "test:all": "jest --selectProjects unit integration existing",
    "test:manual": "node test-suite/run-all-tests.js --category=manual",
    "test:integration-real": "node test-suite/run-all-tests.js --category=integration",
    "test:e2e": "node test-suite/run-all-tests.js --category=e2e",
    "test:comprehensive": "node test-suite/run-all-tests.js --category=all",
    "test:security": "jest --selectProjects security",
    "test:performance": "jest --selectProjects performance --testTimeout=60000",
    "test:automation": "jest --selectProjects automation",
    "test:tools": "jest --selectProjects tools",
    "test:e2e-new": "jest --selectProjects e2e",
    "test:ci": "jest --coverage --ci --watchAll=false --passWithNoTests",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:benchmark": "jest tests/benchmark.test.ts --testTimeout=60000",
    "test:load": "jest tests/load-testing.test.ts --testTimeout=120000",
    "backup": "chmod +x scripts/backup-recovery.sh && ./scripts/backup-recovery.sh backup",
    "restore": "chmod +x scripts/backup-recovery.sh && ./scripts/backup-recovery.sh restore",
    "backup:list": "chmod +x scripts/backup-recovery.sh && ./scripts/backup-recovery.sh list",
    "backup:cleanup": "chmod +x scripts/backup-recovery.sh && ./scripts/backup-recovery.sh cleanup",
    "backup:health": "chmod +x scripts/backup-recovery.sh && ./scripts/backup-recovery.sh health",
    "docker:build": "docker build -f deployment/docker/Dockerfile -t mcp-jira-server:latest .",
    "docker:run": "docker run -d --name mcp-jira-server --env-file .env -p 3000:3000 -p 9090:9090 mcp-jira-server:latest",
    "k8s:deploy": "kubectl apply -f deployment/k8s/",
    "helm:install": "helm install mcp-jira-server deployment/helm/",
    "helm:upgrade": "helm upgrade mcp-jira-server deployment/helm/",
    "validate": "npm run type-check && npm run lint:check && npm run test:ci",
    "type-check": "tsc --noEmit",
    "lint:check": "eslint src/**/*.ts tests/**/*.ts",
    "test:jira-client": "node test-suite/integration/jira-client-methods.test.js",
    "test:mcp-server": "node test-suite/e2e/mcp-server-protocol.test.js",
    "test:custom-fields": "node test-suite/unit/custom-fields/customField.test.js",
    "test:analytics-unit": "node test-suite/unit/analytics/analytics.test.js",
    "test:automation-unit": "node test-suite/unit/automation/automation-engine.test.js",
    "test:workflow-integration": "node test-suite/integration/workflow/workflow-management.test.js",
    "test:cli-integration": "node test-suite/integration/cli/cli-tools.test.js",
    "test:unit-transformed": "node test-suite/run-all-tests.js --category=unit",
    "test:utilities": "node test-suite/manual/test-utilities.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "start": "node dist/index.js",
    "start:dev": "npm run build && npm run start",
    "health": "node -e \"console.log('Health check endpoint: health://status')\"",
    "validate-config": "node -e \"require('./dist/utils/configValidator.js').configValidator.validateEnvironment(); console.log('Configuration is valid');\"",
    "workflow-cli": "node dist/cli/workflow-cli.js",
    "confluence-cli": "node dist/cli/confluence-cli.js",
    "automation-cli": "node dist/cli/automation-cli.js",
    "customfield-cli": "node dist/cli/customfield-cli.js",
    "docs:generate": "node -e \"console.log('API documentation available at docs/API_REFERENCE.md')\"",
    "tools:list": "node -e \"const tools = require('./dist/index.js').TOOLS || []; console.log('Available tools:', tools.length); tools.forEach(t => console.log('- ' + t.name));\"",
    "server:info": "node -e \"console.log('Enhanced MCP Jira REST Server v1.0.0'); console.log('Tools: 65+'); console.log('Features: Analytics, Automation, Custom Fields, Confluence');\""
  },
  "bin": {
    "jira-workflow": "./dist/cli/workflow-cli.js",
    "jira-confluence": "./dist/cli/confluence-cli.js",
    "jira-automation": "./dist/cli/automation-cli.js",
    "jira-customfield": "./dist/cli/customfield-cli.js"
  },
  "keywords": [
    "mcp",
    "jira",
    "rest-api",
    "typescript",
    "workflow",
    "automation"
  ],
  "author": "Enhanced MCP Jira Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "axios": "^1.6.0",
    "chart.js": "^4.5.0",
    "commander": "^11.0.0",
    "cron": "^4.3.3",
    "dotenv": "^16.3.0",
    "exceljs": "^4.4.0",
    "node-cron": "^4.2.1",
    "pdfkit": "^0.17.1",
    "uuid": "^11.1.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.0.0",
    "@types/node": "^20.0.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-node": "^29.7.0",
    "jest-junit": "^16.0.0",
    "jest-html-reporters": "^3.1.7",
    "rimraf": "^5.0.5",
    "supertest": "^7.1.4",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
